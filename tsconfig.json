{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "es2017",
      "es7",
      "es6"
    ],
    "types": [
      "node",
      "jest"
    ],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "lib",
    "node_modules",
    "examples"
  ],
  "include": [
    "src"
  ]
}
